    <h2 class="form-signin-heading">Morgue</h2>

    <% if flash[:notice] %>
      <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
    <%= text_field_tag :email, params[:email], class:'form-control', placeholder:'Email Address' %>
    <%= password_field_tag :password, params[:password], class:'form-control', placeholder:'Password' %>
    </p> 
    <%= submit_tag "Log in", class:'btn btn-lg btn-primary btn-block' %>
<% end %>    
